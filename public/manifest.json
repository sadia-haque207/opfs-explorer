{
  "manifest_version": 3,
  "name": "OPFS Explorer",
  "version": "0.0.1",
  "description": "Inspect and manage the Origin Private File System",
  "devtools_page": "devtools.html",
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}